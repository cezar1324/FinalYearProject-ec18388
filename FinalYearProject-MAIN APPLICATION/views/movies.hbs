<!-- list of Horror movies________________________________________-->
<h1 class="movietype">Horror movies:</h1>
    <div class="container">
    <div class="row">
        {{#each movielist1}} 
        {{#ifequal this.type1 "Horror"}}    
            <div class="col-sm">
                <div class="card" style="width: 18rem;margin-top:2.5%;margin-left:2.5% " >
                    <img class="card-img-top" src = " {{this.Image}}">
                    <div class="card-body">
                        <h5 class="card-title">{{this.MovieName}}</h5>
                        <p class="card-text">{{this.Description}}</p>
                        <form  action="/auth/playmovie" method="POST">
                            <input type="hidden" id="MovieName" name="MovieName" value="{{this.MovieName}}">
                            <button type="submit" class="btn btn-primary">Watch Now</button> 
                        </form> 
                    </div>
                </div>
            </div>
        {{/ifequal}}
        {{/each }}
    </div>
    </div>

